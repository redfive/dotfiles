#!/usr/bin/env bash

# no args, find all files
if [ $# = 0 ]; then
    find ${HOME}/local/ -maxdepth 2 -mindepth 2 -type d
# one arg, search for the file by name
elif [ $# = 1 ]; then
    find ${HOME}/local/ -maxdepth 2 -mindepth 2 -type d -name "${1}"
# 2 args search for the file by name then grep the output
elif [ $# = 2 ]; then
    find ${HOME}/local/ -maxdepth 2 -mindepth 2 -type d -name "${1}" | grep $2
fi
